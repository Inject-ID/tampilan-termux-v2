#!/usr/xbin/bash

k="\033[33;1m"
 m="\033[31;1m"
  pu="\033[39;1m"
   p="\033[36;1m"
    b="\033[34;1m"
     h="\033[32;1m"
      c="\033[35;1m"
       JAM=`date +%H`
        MENIT=`date +%M`
         DETIK=`date +%S`
         TANGGAL=`date +%d`
        BULAN=`date +%m`
      TAHUN=`date +%Y`
mp="\033[41;1;39m"
o="\033[0m"
clear

printf "\n      ${p}─╤╦︻${h}=${p}(${m}◣${k}_${m}◢${p})${h}=${p}︻╦╤─   ${m}[ ${pu}SUBSCRIBE ${m}]   \n"		
printf "         ${h}   __${b}N${h}__     ${m}[ ${pu}YOUTUBE ${m}]\n"
printf "${p}             [${m}'${p}] ${m}[ ${pu}NURUSSHOBAH ${m}]\n"
printf "${p}             [${m}'${p}] ${m}[ ${pu}B.H.S ${m}]\n"
printf "${p}             [${m}'${p}] ${m}[ ${pu}Buronan.Haji.Suhajro ${m}]\n"
printf "${h}              V     ${m}[ ${pu}LIKE & KOMEN ${m}]\n"
printf "${pu}      ▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬▬\n\n\n"

export PS1='\[\033[01;39m\][ \[\033[01;35m\]${PWD/*\//}\[\033[01;39m\] ]\[\033[01;31m\]•\[\033[01;32m\]>\[\033[01;39m\] '
